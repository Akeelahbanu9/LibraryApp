<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".add_book">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b" />

    <EditText
        android:id="@+id/title_input"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:hint="Enter the Book Title"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#5A5A5A"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Author_input"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/title_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:hint="Enter Author Name"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#5A5A5A" />

    <EditText
        android:id="@+id/pages_input"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/Author_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="9dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:hint="Number of Pages"
        android:inputType="number"
        android:textColor="#000"
        android:textColorHint="#5A5A5A" />

    <EditText
        android:id="@+id/description_input"
        android:layout_width="277dp"
        android:layout_height="152dp"
        android:layout_below="@+id/pages_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="11dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:hint="Description about the Book"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#5A5A5A" />

    <Button
        android:id="@+id/add_button"
        style="@style/CardView.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/button"
        android:text="Add"

        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>